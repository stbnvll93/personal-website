{
  "name": "personal-website",
  "version": "1.0.0",
  "description": "My personal website built with 11ty and Tailwind CSS.",
  "scripts": {
    "start:eleventy": "eleventy --serve",
    "start:tailwind": "npx tailwindcss -i styles/tailwind.css -c styles/tailwind.config.js -o _site/style.css --watch",
    "build": "eleventy & npx tailwindcss -i styles/tailwind.css -c styles/tailwind.config.js -o _site/style.css --minify"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stbnvll/personal-website"
  },
  "author": {
    "name": "Simon Stubenvoll",
    "url": "https://www.simonstubenvoll.de"
  },
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "2.0.1",
    "@11ty/eleventy-navigation": "0.3.5",
    "autoprefixer": "10.4.20",
    "html-minifier": "4.0.0",
    "postcss": "8.4.40",
    "tailwindcss": "3.4.7"
  }
}
